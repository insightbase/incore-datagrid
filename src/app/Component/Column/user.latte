<td n:class="'text-gray-800 font-normal'">
    <div class="flex items-center gap-2.5">
        <div class="" n:if="$activeRow?->avatar_id !== null">
            {control image, $activeRow->avatar_id, 36, 36, 'h-9 rounded-full'}
        </div>
        <div class="flex flex-col gap-0.5">
            <a class="leading-none font-medium text-sm text-gray-900 hover:text-primary" href="#">
                {$activeRow?->firstname} {$activeRow?->lastname}
            </a>
        </div>
    </div>
</td>